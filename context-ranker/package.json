{
  "name": "context-ranker",
  "version": "1.0.0",
  "description": "Context ranking service for backboard.io agent - stores and retrieves relevant passages from MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "crawl": "ts-node src/ingestion/crawler.ts",
    "ingest": "ts-node src/ingestion/pipeline.ts",
    "train": "python scripts/train_xgboost.py",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "gpt-tokenizer": "^2.1.1",
    "mongodb": "^6.3.0",
    "openai": "^4.20.0",
    "robots-parser": "^3.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

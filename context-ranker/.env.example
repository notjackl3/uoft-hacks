# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/context-ranker

# Embedding Provider: 'backboard' or 'openai'
EMBEDDING_PROVIDER=backboard
EMBEDDING_API_KEY=your_api_key_here
EMBEDDING_MODEL=text-embedding-3-small

# Backboard.io Settings (only needed if EMBEDDING_PROVIDER=backboard)
BACKBOARD_BASE_URL=https://api.backboard.io

# Server Configuration
PORT=3001
NODE_ENV=development

# XGBoost Toggle (set to "true" to enable Python XGBoost reranking)
USE_XGBOOST=false

# Crawler Settings
MAX_PAGES_PER_DOMAIN=100
CRAWL_DELAY_MS=1000

# Retrieval Settings
CANDIDATE_LIMIT=500
TOP_K_RESULTS=10

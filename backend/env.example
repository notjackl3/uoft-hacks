# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=tutor_agent

# APIs
OPENAI_API_KEY=your_openai_key
VOYAGE_API_KEY=your_voyage_key

# App
ENVIRONMENT=development
LOG_LEVEL=INFO

# Rate Limiting (optional - these are the defaults)
LLM_MIN_DELAY=1.0        # Minimum seconds between LLM calls
LLM_MAX_RETRIES=3        # Max retries on rate limit (429)
LLM_INITIAL_BACKOFF=2.0  # Initial backoff delay in seconds
LLM_MAX_BACKOFF=30.0     # Maximum backoff delay in seconds
